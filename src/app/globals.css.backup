.transition-shadow { transition-property: box-shadow !important; }
.duration-200 { transition-duration: 200ms !important; }

/* Hover states */
.hover\:opacity-90:hover { opacity: 0.9 !important; }
.hover\:bg-accent:hover { background-color: var(--accent) !important; }
.hover\:bg-accent\/50:hover { background-color: rgb(from var(--accent) r g b / 0.5) !important; }
.hover\:text-foreground:hover { color: var(--foreground) !important; }
.hover\:text-accent-foreground:hover { color: var(--accent-foreground) !important; }
.hover\:shadow-lg:hover { box-shadow: var(--shadow-lg) !important; }
.hover\:bg-primary\/90:hover { background-color: rgb(from var(--primary) r g b / 0.9) !important; }

/* Shadow */
.shadow-sm { box-shadow: var(--shadow-sm) !important; }
.shadow-md { box-shadow: var(--shadow-md) !important; }
.shadow-lg { box-shadow: var(--shadow-lg) !important; }
.shadow-xl { box-shadow: var(--shadow-xl) !important; }

/* Focus states */
.focus\:outline-none:focus { outline: 0 !important; }
.focus-visible\:outline-none:focus-visible { outline: 0 !important; }
.focus\:ring-2:focus { box-shadow: 0 0 0 2px var(--ring) !important; }
.focus-visible\:ring-2:focus-visible { box-shadow: 0 0 0 2px var(--ring) !important; }
.focus\:ring-ring:focus { --tw-ring-color: var(--ring) !important; }
.focus-visible\:ring-ring:focus-visible { --tw-ring-color: var(--ring) !important; }
.focus\:ring-offset-2:focus { box-shadow: 0 0 0 2px var(--background), 0 0 0 4px var(--ring) !important; }
.focus-visible\:ring-offset-2:focus-visible { box-shadow: 0 0 0 2px var(--background), 0 0 0 4px var(--ring) !important; }

/* Estados disabled e active */
.disabled\:pointer-events-none:disabled { pointer-events: none !important; }
.disabled\:opacity-50:disabled { opacity: 0.5 !important; }
.active\:scale-\[0\.98\]:active { transform: scale(0.98) !important; }

/* Utility */
.whitespace-nowrap { white-space: nowrap !important; }
.fill-primary { fill: var(--primary) !important; }

/* Group hover */
.group:hover .group-hover\:translate-x-1 { transform: translateX(0.25rem) !important; }

/* Responsive - sm */
@media (min-width: 640px) {
  .sm\:px-6 { padding-left: 1.5rem !important; padding-right: 1.5rem !important; }
  .sm\:flex-row { flex-direction: row !important; }
  .sm\:mt-0 { margin-top: 0 !important; }
}

/* Responsive - md */
@media (min-width: 768px) {
  .md\:text-6xl { font-size: 3.75rem !important; line-height: 1 !important; }
  .md\:text-5xl { font-size: 3rem !important; line-height: 1 !important; }
  .md\:grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)) !important; }
  .md\:grid-cols-4 { grid-template-columns: repeat(4, minmax(0, 1fr)) !important; }
  .md\:col-span-2 { grid-column: span 2 / span 2 !important; }
  .md\:px-6 { padding-left: 1.5rem !important; padding-right: 1.5rem !important; }
}

/* Responsive - lg */
@media (min-width: 1024px) {
  .lg\:px-8 { padding-left: 2rem !important; padding-right: 2rem !important; }
  .lg\:grid-cols-3 { grid-template-columns: repeat(3, minmax(0, 1fr)) !important; }
  .lg\:grid-cols-4 { grid-template-columns: repeat(4, minmax(0, 1fr)) !important; }
}

/* Buttons específicos */
.h-8 { height: 2rem !important; }
.h-12 { height: 3rem !important; }